package org.mundo.xml.xquery;

import java.util.ArrayList;
import java.util.Iterator;

class XEPlan
{
  void add(XEObject obj)
  {
    a.add(obj);
  }
  void exec(XEContext ctx) throws XEngine.ExecException
  {
    boolean run=true;
    pc=0;
    while (run)
    {
      run = ((XEObject)a.get(pc)).exec(ctx);
      // if run==false then backtrack
      pc++;
      if (pc>=a.size())
      {
        // backtrack here
        break;
      }
    }
  }
  public String toString()
  {
    StringBuffer sb=new StringBuffer();
#ifdef CFG_JAVA15
    for (XEObject i : a)
    {
#else
    for (Iterator iter = a.iterator(); iter.hasNext();)
    {
	  XEObject i = (XEObject)iter.next();
#endif
      sb.append(i.toString());
      sb.append("\n");
    }
    return sb.toString();
  }
  int pc;
#ifdef CFG_JAVA15
  ArrayList<XEObject> a = new ArrayList<XEObject>();
#else
  ArrayList a = new ArrayList();
#endif
}
