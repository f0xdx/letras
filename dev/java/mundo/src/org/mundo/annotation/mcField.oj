package org.mundo.annotation;

#ifdef CFG_JAVA15
import java.lang.annotation.*;

/**
 * This class is used to specify options for fields.
 *
 * @author AHa
 * @author Erwin Aitenbichler
 */
@Target({ElementType.FIELD})
@Retention(RetentionPolicy.SOURCE)
public @interface mcField {
  /**
   * Defines the external field name, that e.g. appears as tag name in XML.
   * If not specified, the external name is the same as the field name in
   * the source code.
   */
  String name() default "";
  /**
   * Defines whether the field is optional in the external representation.
   * If a field is not optional and is not present during activation, an
   * Exception will be thrown.
   */
  boolean optional() default false;
}
#endif
