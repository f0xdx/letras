package org.mundo.filter;

import org.mundo.annotation.*;

/**
 * <p><code>BooleanAttributeFilter</code> implements compare operations for
 * <code>Boolean</code> attributes.</p>
 * @author Erwin Aitenbichler
 */
@mcSerialize
public class BooleanAttributeFilter extends AttributeFilter
{
  /**
   * Creates an attribute filter for <code>Boolean</code>.
   * This constructor is solely for object deserialization.
   */
  public BooleanAttributeFilter()
  {
  }
  /**
   * Creates an attribute filter for <code>Boolean</code>.
   * @param op     the operator. Supported operators are <code>OP_EQUAL</code> and
   *               <code>OP_NOT_EQUAL</code>.
   * @param value  the compare value.
   * @throws IllegalArgumentException  if an invalid operator was specified.
   */
  public BooleanAttributeFilter(int op, boolean value)
  {
    if (op!=OP_IGNORE && op!=OP_EQUAL && op!=OP_NOT_EQUAL)
      throw new IllegalArgumentException("invalid operator");
    this.op=op;
    cv=value;
  }
  /**
   * Tests if the specified attribute matches this attribute filter.
   * @param obj  the attribute to compare with.
   * @return  <code>true</code> if the specified attribute matches this
   *          attribute filter, <code>false</code> otherwise.
   */
  public boolean matches(Object obj)
  {
    if (!(obj instanceof Boolean))
      return false;
    boolean v=((Boolean)obj).booleanValue();
    boolean b;
    switch (op & MASK_OP)
    {
      case OP_EQUAL:
        b=(v==cv);
        break;
      case OP_IGNORE:
        b=true;
        break;
      default:
        throw new IllegalStateException("invalid operator");
    }
    if ((op & OP_NOT)>0)
      b=!b;
    return b;
  }
  /**
   * Returns the comparison value.
   */
  public Object getValue()
  {
    return new Boolean(cv);
  }
  /**
   * Returns the comparison value.
   */
  public boolean booleanValue()
  {
    return cv;
  }
  /**
   * Returns a string representation of this filter.
   */
  public String toString()
  {
    return opToString()+cv;
  }

  public boolean equals(Object o)
  {
    if (!(o instanceof BooleanAttributeFilter))
      return false;
    BooleanAttributeFilter f=(BooleanAttributeFilter)o;
    return op==f.op && cv==f.cv;
  }

  public int hashCode()
  {
    return op*2+(cv?1:0);
  }

  @mcField(name="value")
  private boolean cv;
}
