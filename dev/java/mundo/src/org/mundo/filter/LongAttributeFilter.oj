package org.mundo.filter;

import org.mundo.annotation.*;

/**
 * <p><code>LongAttributeFilter</code> implements compare operations for
 * <code>Long</code> attributes.</p>
 * @author Erwin Aitenbichler
 */
@mcSerialize
public class LongAttributeFilter extends AttributeFilter
{
  /**
   * Creates an attribute filter suitable for <code>Long</code>.
   * This constructor is solely for object deserialization.
   */
  public LongAttributeFilter()
  {
  }
  /**
   * Creates an attribute filter suitable for <code>Long</code>.
   * @param op     the operator. Supported operators are <code>OP_EQUAL</code>,
   *               <code>OP_NOT_EQUAL</code>, <code>OP_GREATER</code>,
   *               <code>OP_LESS</code>, <code>OP_LESS_EQUAL</code>, and
   *               <code>OP_GREATER_EQUAL</code>.
   * @param value  the compare value.
   * @throws IllegalArgumentException  if an invalid operator was specified.
   */
  public LongAttributeFilter(int op, long value)
  {
    int m=(op & MASK_OP);
    if (m!=OP_IGNORE && m!=OP_EQUAL && m!=OP_GREATER && m!=OP_LESS)
      throw new IllegalArgumentException("invalid operator");
    this.op=op;
    cv=value;
  }
  /**
   * Tests if the specified attribute matches this attribute filter.
   * @param o  the attribute to compare with.
   * @return  <code>true</code> if the specified attribute matches this
   *          attribute filter, <code>false</code> otherwise.
   */
  public boolean matches(Object o)
  {
    if (!(o instanceof Number))
      return false;
    long v=((Number)o).longValue();
    boolean b;
    switch (op & MASK_OP)
    {
      case OP_EQUAL:
        b=(v==cv);
        break;
      case OP_GREATER:
        b=(v>cv);
        break;
      case OP_LESS:
        b=(v<cv);
        break;
      case OP_IGNORE:
        b=true;
        break;
      default:
        throw new IllegalArgumentException("invalid operator");
    }
    if ((op & OP_NOT)>0)
      b=!b;
    return b;
  }

  public boolean equals(Object o)
  {
    if (!(o instanceof LongAttributeFilter))
      return false;
    LongAttributeFilter f=(LongAttributeFilter)o;
    return op==f.op && cv==f.cv;
  }

  public int hashCode()
  {
    return (op<<16)^(new Long(cv).hashCode());
  }

  /**
   * Returns the comparison value.
   */
  public Object getValue()
  {
    return new Long(cv);
  }
  /**
   * Returns the comparison value.
   */
  public long longValue()
  {
    return cv;
  }
  /**
   * Returns a string representation of this filter.
   */
  public String toString()
  {
    return opToString()+cv;
  }

  @mcField(name="value")
  private long cv;
}
