package org.mundo.net;

import org.mundo.rt.IMessageHandler;
import org.mundo.rt.Message;
import org.mundo.rt.Service;
import org.mundo.rt.Logger;
import org.mundo.rt.TypedContainer;
import org.mundo.rt.TypedMap;

/**
 * A protocol handler for object activation and passivation.
 */
public class ActivationService extends Service
       implements IMessageHandler
       emits IMessageHandler
{
  public ActivationService()
  {
  }
  public boolean down(Message msg)
  {
    if (msg.getMap("main", "passive")==null)
    {
      try
      {
        msg = msg.copyFrame();
        msg.passivate();
      }
      catch(Exception x)
      {
        log.exception(x);
      }
    }
    return emit.down(msg);
  }
  public boolean up(Message msg)
  {
    if (msg.getMap("main", "active")==null)
    {
      try
      {
        TypedMap m=msg.getMap("main", "passive");
        if (m!=null)
          msg.put("main", "active", (TypedMap)TypedContainer.activate(m));
      }
      catch(Exception x)
      {
        log.warning(x.toString());
        TypedMap map=msg.getOrCreateMap("error", "active");
        map.put("exception", x);
      }
    }
    return emit.up(msg);
  }
  private Logger log = Logger.getLogger("actsvc");
}
