package org.mundo.rt;

/**
 * Encapsulates log entries.
 */
public class LogEntry
{
  LogEntry(Logger logger, int level, String category, String text)
  {
    this.logger = logger;
    this.level = level;
    this.category = category;
    this.text = text;
  }
  public int getLevel()
  {
    return level;
  }
  public String getCategory()
  {
    return category;
  }
  public String getText()
  {
    return text;
  }
  public String toString()
  {
#ifdef CFG_JAVA15
    return String.format("%c %-12s %s", Logger.logLevelToChar(level), category, text);
#else
    return Logger.logLevelToChar(level)+" "+category+" "+text;
#endif
  }
  public Logger getLogger()
  {
    return logger;
  }

  private int level;
  private String category;
  private String text;
  private Logger logger;
}
