package org.mundo.rt;

/**
 * Thrown when an error during a remote method call occurs.
 * @author Erwin Aitenbichler
 */
#ifndef CFG_JAVA15
public class RMCException extends RuntimeException
{
  public RMCException()
  {
  }
  public RMCException(String text)
  {
    super(text);
  }
  public RMCException(Throwable cause)
  {
    this.cause=cause;
  }
  public RMCException(String text, Throwable cause)
  {
    super(text);
    this.cause=cause;
  }
  public String toString()
  {
    if (cause!=null)
    {
      if (text!=null)
        return "RMCException: "+text+" caused by: "+cause;
      return "RMCException caused by: "+cause;
    }
    if (text!=null)
      return "RMCException: "+text;
    return "RMCException";
  }
  private Throwable cause;
  private String text;
}
#else
public class RMCException extends RuntimeException
{
  public RMCException()
  {
  }
  public RMCException(String t)
  {
    super(t);
  }
  public RMCException(Throwable b)
  {
    super(b);
  }
  public RMCException(String t, Throwable b)
  {
    super(t, b);
  }
}
#endif
