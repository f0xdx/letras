<plug-in xmlns="http://mundo.org/2004/plugin/">
  <service xmlns="http://mundo.org/2004/plugin/service"
           xmlns:xsi="http://www.w3.org/1999/XMLSchema-instance">

    <classname>org.mundo.service.scale.KernPCBService</classname>
    <new-instance xsi:type="map">
      <name>KernPCBService</name>
      <classname>org.mundo.service.scale.KernPCBService</classname>
      <config xsi:type="map" activeClass="org.mundo.service.scale.KernPCBService$Options">
        <channel>scale</channel>
        <devicebridge-channel>devicebridge</devicebridge-channel>
        <port-usb xsi:type="xsd:boolean">true</port-usb>
      </config>
    </new-instance>

  </service>
</plug-in>
